{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/auth/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/profile/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/suggestions/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/health",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
